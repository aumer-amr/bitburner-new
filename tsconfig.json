{
  "include": ["global.d.ts", "NetscriptDefinitions.d.ts", "servers/**/*", "lib"],
  "exclude": ["lib/react.ts"],
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "NodeNext",
    "target": "esnext",
    "moduleResolution": "NodeNext",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./servers",
    "outDir": "./build",
    "baseUrl": "./",
    "allowJs": true,
    "jsx": "react",
    "paths": {
      "@/*": [
        "./*"
      ],
      "NetscriptDefinitions": ["NetscriptDefinitions.d.ts"],
      "@react": ["lib/react.ts"]
    }
  }
}
